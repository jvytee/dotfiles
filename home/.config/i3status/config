# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 5

    color_good = "#98971a"
    color_degraded = "#d79921"
    color_bad = "#cc241d"
}

order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "cpu_usage"
order += "disk /home"
order += "volume master"
order += "battery all"
order += "tztime local"

wireless _first_ {
    format_up = " %ip (%quality at %essid)"
    format_down = " down"
}

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up = " %ip (%speed)"
    format_down = " down"
}

battery all {
    format = "%status %percentage %remaining"
    hide_seconds = true
    integer_battery_capacity = true
    status_chr =  
    status_bat =  
    status_unk =  
    status_full =  
}

tztime local {
    format = " %Y-%m-%d %H:%M:%S"
}

disk "/home" {
    format = " %avail"
}

volume master {
    format = " %volume"
    format_muted = " "
    device = "pulse"
}

cpu_usage {
    format = " %usage"
}

ipv6 {
    format_up = " %ip"
    format_down = " legacy"
